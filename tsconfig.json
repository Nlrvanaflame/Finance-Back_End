{
  "compilerOptions": {
    "types": [ "node","jest"],
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist" ,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "app.ts",
    "server.ts",
    "types/express.d.ts",
    "tests/**/*",
   ],
  "exclude": [
    "node_modules"
  ]
}
